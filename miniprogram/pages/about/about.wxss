/* 关于页面样式 */

.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 应用信息头部 */
.app-header {
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.app-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.app-version {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 15rpx;
}

.app-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 通用卡片样式 */
.disclaimer-section,
.features-section,
.risks-section,
.tech-section,
.actions-section,
.privacy-section,
.opensource-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 免责声明区域 */
.disclaimer-content {
  margin-bottom: 20rpx;
}

.disclaimer-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.disclaimer-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(45deg, #f44336, #d32f2f);
  color: white;
  border: none;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 功能特性网格 */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-item {
  text-align: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 2rpx solid #e9ecef;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 风险提示列表 */
.risks-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.risk-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid;
}

.high-risk {
  background: rgba(244, 67, 54, 0.1);
  border-left-color: #f44336;
}

.medium-risk {
  background: rgba(255, 152, 0, 0.1);
  border-left-color: #ff9800;
}

.risk-level {
  font-size: 22rpx;
  font-weight: bold;
  color: white;
  background: #f44336;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
  min-width: 80rpx;
  text-align: center;
}

.medium-risk .risk-level {
  background: #ff9800;
}

.risk-content {
  flex: 1;
}

.risk-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.risk-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 技术栈列表 */
.tech-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tech-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.tech-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.tech-version {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮区域 */
.action-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-row:last-child {
  margin-bottom: 0;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 15rpx;
  font-size: 26rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.action-btn.primary {
  background: linear-gradient(45deg, #2196F3, #1976D2);
  color: white;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e9ecef;
}

.btn-icon {
  font-size: 28rpx;
}

/* 隐私保护区域 */
.privacy-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.privacy-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 10rpx;
}

.privacy-icon {
  font-size: 32rpx;
}

.privacy-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 开源信息区域 */
.opensource-content {
  text-align: center;
}

.opensource-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.github-info {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.github-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.build-info {
  font-size: 24rpx;
  color: #666;
}

/* 底部信息 */
.footer {
  text-align: center;
  padding: 40rpx 0;
  color: rgba(255, 255, 255, 0.7);
}

.footer-text {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.footer-warning {
  font-size: 22rpx;
  color: #ffeb3b;
  font-weight: bold;
  margin-top: 15rpx;
}