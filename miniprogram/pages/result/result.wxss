/* 结果页面样式 */

.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  min-height: 100vh;
}

/* 成功状态头部 */
.success-header {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: bounce 1s ease-in-out;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

.success-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 结果信息卡片 */
.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.result-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.info-value.warning {
  color: #f44336;
}

/* 警告框 */
.warning-box {
  background: rgba(255, 152, 0, 0.1);
  border: 2rpx solid #ff9800;
  border-radius: 12rpx;
  padding: 20rpx;
}

.warning-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #f57c00;
  margin-bottom: 15rpx;
}

.warning-content {
  font-size: 24rpx;
  line-height: 1.6;
  color: #666;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 30rpx;
}

.primary-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  height: 100rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.download-btn {
  background: linear-gradient(45deg, #2196F3, #1976D2);
  color: white;
}

.download-btn.loading {
  background: #cccccc;
}

.preview-btn {
  background: linear-gradient(45deg, #ff9800, #f57c00);
  color: white;
}

.btn-loading {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.loading-icon {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.btn-icon {
  font-size: 32rpx;
}

/* 次要操作 */
.secondary-actions {
  display: flex;
  gap: 20rpx;
}

.secondary-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #666;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

/* 统计区域 */
.stats-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 技术说明 */
.tech-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.tech-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tech-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.share-modal.show {
  opacity: 1;
  visibility: visible;
}

.share-content {
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.share-modal.show .share-content {
  transform: translateY(0);
}

.share-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.share-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}

.share-options {
  display: flex;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.share-option {
  flex: 1;
  height: 120rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.option-icon {
  font-size: 40rpx;
}

.option-text {
  font-size: 26rpx;
  color: #333;
}

.share-warning {
  text-align: center;
  font-size: 24rpx;
  color: #f44336;
}