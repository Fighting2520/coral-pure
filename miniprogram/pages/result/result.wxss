/* 结果页面样式 */
.container {
  padding: 30rpx;
  min-height: 100vh;
}

/* 游客模式提示 */
.tourist-warning {
  background: linear-gradient(45deg, #ff9800, #f57c00);
  color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.warning-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.warning-text {
  font-size: 24rpx;
  line-height: 1.4;
}

/* 成功头部 */
.success-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.success-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.success-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 结果卡片 */
.result-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-info {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.info-item {
  width: 33.33%;
  padding: 10rpx;
  text-align: center;
}

.info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
}

.info-value.warning {
  color: #ff9800;
}

/* 警告框 */
.warning-box {
  background: rgba(255, 152, 0, 0.1);
  border-left: 8rpx solid #ff9800;
  padding: 20rpx;
  border-radius: 8rpx;
}

.warning-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 10rpx;
}

.warning-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作区域 */
.action-section {
  margin-bottom: 40rpx;
}

.primary-actions {
  display: flex;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  border: none;
}

.download-btn {
  background: linear-gradient(45deg, #2196F3, #1976D2);
}

.preview-btn {
  background: linear-gradient(45deg, #4CAF50, #45a049);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.btn-loading {
  display: flex;
  align-items: center;
}

.loading-icon {
  animation: spin 1.5s infinite linear;
  margin-right: 10rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.secondary-actions {
  display: flex;
}

.secondary-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 15rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
}

/* 禁用按钮样式 */
.disabled {
  background: #cccccc !important;
  color: #999999 !important;
  opacity: 0.7;
}

/* 统计区域 */
.stats-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.stats-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: flex;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #2196F3;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 技术信息 */
.tech-info {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tech-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.tech-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.tech-item {
  margin-bottom: 10rpx;
}

/* 游客模式说明 */
.tourist-note {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.note-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}

.note-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.share-modal.show {
  opacity: 1;
  visibility: visible;
}

.share-content {
  width: 80%;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.share-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.share-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 32rpx;
  color: #999;
}

.share-options {
  display: flex;
  margin-bottom: 30rpx;
}

.share-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: none;
}

.option-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.option-text {
  font-size: 24rpx;
  color: #666;
}

.share-warning {
  text-align: center;
  font-size: 24rpx;
  color: #ff9800;
}