/* 主页面样式 - 现代化设计风格 */

.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 免责声明卡片 */
.disclaimer-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.disclaimer-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f44336;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.disclaimer-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #666;
}

/* 输入区域 */
.input-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.input-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.input-container {
  position: relative;
}

.url-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.url-input:focus {
  border-color: #2196F3;
  background: white;
}

.input-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  border: none;
}

.paste-btn {
  background: #4CAF50;
  color: white;
}

.clear-btn {
  background: #f5f5f5;
  color: #666;
}

/* 风险提示面板 */
.risk-panel {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #ff9800;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.platform-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.platform-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.risk-level {
  font-size: 26rpx;
  font-weight: bold;
}

.risk-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.suggestion-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.suggestion-item {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

/* 支持平台区域 */
.platform-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-icon {
  font-size: 24rpx;
  color: #2196F3;
}

.platform-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.platform-item {
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
}

.high-risk {
  background: rgba(244, 67, 54, 0.1);
  border-color: #f44336;
}

.medium-risk {
  background: rgba(255, 152, 0, 0.1);
  border-color: #ff9800;
}

.low-risk {
  background: rgba(76, 175, 80, 0.1);
  border-color: #4caf50;
}

.platform-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.platform-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.platform-risk {
  font-size: 22rpx;
  color: #666;
}

/* 处理按钮 */
.action-section {
  margin-bottom: 40rpx;
}

.process-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(45deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.process-btn:disabled {
  background: #cccccc;
  box-shadow: none;
}

.process-btn.processing {
  background: linear-gradient(45deg, #2196F3, #1976D2);
}

.processing-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.loading-icon {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 使用说明 */
.usage-tips {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.tip-item.warning {
  color: #f44336;
  font-weight: bold;
}

/* 底部信息 */
.footer {
  text-align: center;
  padding: 40rpx 0;
  color: rgba(255, 255, 255, 0.7);
}

.copyright {
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.tech-info {
  font-size: 22rpx;
}