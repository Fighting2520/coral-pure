/* 首页样式 */
.container {
  padding: 30rpx;
  min-height: 100vh;
}

/* 游客模式提示 */
.tourist-tip {
  background: linear-gradient(45deg, #ff9800, #f57c00);
  color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tip-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 24rpx;
  line-height: 1.4;
}

.tip-close {
  padding: 0 10rpx;
  font-size: 28rpx;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 输入区域 */
.input-section {
  margin-bottom: 60rpx;
}

.input-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.url-input {
  width: 100%;
  height: 100rpx;
  background: white;
  border-radius: 15rpx;
  padding: 0 180rpx 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.input-actions {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  align-items: center;
}

.clear-btn {
  width: 80rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 32rpx;
}

.paste-btn {
  width: 100rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}

.process-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(45deg, #2196F3, #1976D2);
  color: white;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.process-btn.loading {
  background: #999;
}

.loading-icon {
  animation: spin 1.5s infinite linear;
  margin-right: 10rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 平台支持 */
.platform-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 30rpx;
  background: #2196F3;
  border-radius: 4rpx;
}

.platform-list {
  display: flex;
  flex-wrap: wrap;
}

.platform-item {
  width: 25%;
  padding: 20rpx;
  text-align: center;
}

.platform-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.platform-name {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.platform-risk {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  display: inline-block;
}

.platform-risk.high {
  background: rgba(244, 67, 54, 0.1);
  color: #f44336;
}

.platform-risk.medium {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.platform-risk.low {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

/* 使用说明 */
.guide-section {
  margin-bottom: 60rpx;
}

.guide-steps {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.guide-step {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.guide-step:last-child {
  border-bottom: none;
}

.step-number {
  width: 50rpx;
  height: 50rpx;
  background: #2196F3;
  color: white;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.step-desc {
  font-size: 24rpx;
  color: #666;
}

/* 免责声明 */
.disclaimer {
  background: rgba(244, 67, 54, 0.1);
  border: 2rpx solid #f44336;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.disclaimer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #f44336;
  margin-bottom: 10rpx;
}

.disclaimer-content {
  font-size: 24rpx;
  line-height: 1.6;
  color: #666;
}

/* 游客模式说明 */
.tourist-note {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.note-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}

.note-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}