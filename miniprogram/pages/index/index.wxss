/* 首页样式 */
.container {
  padding: 30rpx;
  min-height: 100vh;
}

/* 游客模式提示 */
.tourist-tip {
  background: linear-gradient(45deg, #ff9800, #f57c00);
  color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tip-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 24rpx;
  line-height: 1.4;
}

.tip-close {
  padding: 0 10rpx;
  font-size: 28rpx;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 功能选择区域 */
.function-section {
  margin-bottom: 40rpx;
}

.function-tabs {
  display: flex;
  background: white;
  border-radius: 15rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(45deg, #2196F3, #1976D2);
  color: white;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.tab-text {
  font-size: 24rpx;
}

/* 上传视频区域 */
.upload-section {
  margin-bottom: 60rpx;
}

.upload-area {
  background: white;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.upload-content {
  padding: 80rpx 40rpx;
  text-align: center;
  border: 4rpx dashed #ddd;
  margin: 20rpx;
  border-radius: 15rpx;
}

.upload-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.upload-tips {
  font-size: 24rpx;
  color: #666;
}

.video-preview {
  padding: 20rpx;
}

.preview-video {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.video-info {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.video-name {
  font-size: 28rpx;
  color: #333;
}

.video-size {
  font-size: 24rpx;
  color: #666;
}

/* 链接解析区域 */
.link-section {
  margin-bottom: 60rpx;
}

.coming-soon {
  background: white;
  border-radius: 15rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.coming-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.coming-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.coming-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.coming-note {
  font-size: 24rpx;
  color: #2196F3;
  background: rgba(33, 150, 243, 0.1);
  padding: 20rpx;
  border-radius: 10rpx;
}

/* 处理按钮 */
.process-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(45deg, #2196F3, #1976D2);
  color: white;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.process-btn:disabled {
  background: #ccc;
}

.process-btn.loading {
  background: #999;
}

.loading-icon {
  animation: spin 1.5s infinite linear;
  margin-right: 10rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 平台支持 */
.platform-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 30rpx;
  background: #2196F3;
  border-radius: 4rpx;
}

.platform-list {
  display: flex;
  flex-wrap: wrap;
}

.platform-item {
  width: 25%;
  padding: 20rpx;
  text-align: center;
}

.platform-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.platform-name {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.platform-risk-note {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  margin-top: 20rpx;
  padding: 10rpx;
}

/* 使用说明 */
.guide-section {
  margin-bottom: 60rpx;
}

.guide-steps {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.guide-step {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.guide-step:last-child {
  border-bottom: none;
}

.step-number {
  width: 50rpx;
  height: 50rpx;
  background: #2196F3;
  color: white;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.step-desc {
  font-size: 24rpx;
  color: #666;
}

/* 免责声明 */
.disclaimer {
  background: rgba(244, 67, 54, 0.1);
  border: 2rpx solid #f44336;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.disclaimer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #f44336;
  margin-bottom: 10rpx;
}

.disclaimer-content {
  font-size: 24rpx;
  line-height: 1.6;
  color: #666;
}

/* 游客模式说明 */
.tourist-note {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.note-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}

.note-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 进度显示 */
.progress-section {
  margin-bottom: 30rpx;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(45deg, #2196F3, #1976D2);
  border-radius: 6rpx;
  transition: width 0.3s ease;
  animation: progress-shine 2s infinite;
}

.progress-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  font-weight: bold;
}

@keyframes progress-shine {
  0% { box-shadow: 0 0 5rpx rgba(33, 150, 243, 0.3); }
  50% { box-shadow: 0 0 20rpx rgba(33, 150, 243, 0.6); }
  100% { box-shadow: 0 0 5rpx rgba(33, 150, 243, 0.3); }
}
